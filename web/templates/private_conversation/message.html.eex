<li class="message <%= if @message.sender == Guardian.Plug.current_resource(@conn) do "message-me" end %>">
  <div class="message-content">
    <div class="message-header">
      <div class="message-sender-name">
        <strong>
          <%= username_with_avatar @message.sender %>
        </strong>
      </div>
      <div class="message-timestamp">
        <strong><%= time_ago_in_words @message.inserted_at %></strong>
      </div>
    </div>
    <div class="message-body mentionable">
      <%= text_to_html @message.body %>
    </div>
  </div>
</li>
